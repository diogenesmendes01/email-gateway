# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/email_gateway"

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_DB="0"
## REDIS_PASSWORD=""

# AWS SES
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
AWS_REGION="us-east-1"
AWS_SES_REGION="us-east-1"
SES_FROM_ADDRESS="noreply@yourdomain.com"
SES_REPLY_TO_ADDRESS="reply@yourdomain.com"
SES_CONFIGURATION_SET_NAME="default"

# Dashboard Authentication
DASHBOARD_USERNAME="admin"
DASHBOARD_PASSWORD_HASH="$2b$12$LQv3c1yqBWVHxkd0LHAkCOYz6TtxMQJqhN8/LewdBPj8j/7qJ2V9O"

# Rate Limiting
RATE_LIMIT_TTL="60"
RATE_LIMIT_MAX="100"

# Application
NODE_ENV="development"
PORT="3000"
API_PREFIX="v1"
CORS_ORIGIN="*"
# TASK 7.2 — SLO/Capacidade
# Percentual alvo de sucesso (ex.: 95)
SLO_TARGET_SUCCESS_RATE_PCT="95"
# Percentual máximo de erro na janela (ex.: 5)
SLO_MAX_ERROR_RATE_PCT="5"
# P95 máximo de idade na fila (ms) (ex.: 120000 = 120s)
SLO_MAX_QUEUE_AGE_P95_MS="120000"

# TASK 7.2 — Flags de Caos (usar apenas em testes!)
# Simular erro de throttling/429 no SES
CHAOS_SES_429="false"
# Simular preenchimento de disco a 95% (scripts de caos)
CHAOS_DISK_FILL="false"
# Simular Redis down por 60s (scripts de caos)
CHAOS_REDIS_DOWN_60S="false"

# Encryption (REQUIRED for production - generate with: openssl rand -base64 32)
ENCRYPTION_KEY="your-secure-encryption-key-here"
ENCRYPTION_SALT_SECRET="your-salt-secret-here"

# Queue Alerts (opcional)
QUEUE_ALERT_WAITING_THRESHOLD="1000"
QUEUE_ALERT_FAILED_THRESHOLD="50"

# Domain Management (TASK 6.2)
SES_QUOTA_THRESHOLD="80"
SES_ALERT_EMAIL="admin@yourdomain.com"
SES_QUOTA_LOG="/var/log/ses-quota.log"
