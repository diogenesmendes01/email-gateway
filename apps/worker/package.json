{
  "name": "@email-gateway/worker",
  "version": "1.0.0",
  "private": true,
  "description": "Email Gateway Worker - Bull Queue Processor",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "start:prod": "node dist/index.js",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.913.0",
    "@email-gateway/database": "*",
    "@email-gateway/shared": "*",
    "bullmq": "^5.1.5",
    "dotenv": "^16.4.1",
    "ioredis": "^5.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "services/**/*.ts",
      "!services/**/__tests__/**"
    ],
    "coverageDirectory": "../coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/../dist/",
      "<rootDir>/index.ts",
      "<rootDir>/config/",
      "<rootDir>/processors/",
      "<rootDir>/services/logging.service.ts",
      "<rootDir>/services/tracing.service.ts",
      "<rootDir>/services/audit.service.ts",
      "<rootDir>/services/domain-management.service.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testEnvironment": "node"
  }
}
