{
  "name": "email-gateway",
  "version": "1.0.0",
  "private": true,
  "description": "MVP Email Gateway - Sistema de envio de boletos por e-mail",
  "author": "CertShift Team",
  "license": "UNLICENSED",
  "scripts": {
    "prepare": "husky",
    "dev": "concurrently -n \"API,WORKER,DASHBOARD\" -c \"blue,green,magenta\" \"pnpm dev:api\" \"pnpm dev:worker\" \"pnpm dev:dashboard\"",
    "dev:api": "pnpm --filter @email-gateway/api dev",
    "dev:worker": "pnpm --filter @email-gateway/worker dev",
    "dev:dashboard": "pnpm --filter @email-gateway/dashboard dev",
    "build": "pnpm -r build",
    "build:ci": "pnpm ci:build",
    "build:api": "pnpm --filter @email-gateway/api build",
    "build:worker": "pnpm --filter @email-gateway/worker build",
    "build:dashboard": "pnpm --filter @email-gateway/dashboard build",
    "test": "pnpm -r test",
    "test:ci": "pnpm ci:test",
    "test:api": "pnpm --filter @email-gateway/api test",
    "test:worker": "pnpm --filter @email-gateway/worker test",
    "lint": "pnpm -r lint",
    "lint:ci": "pnpm ci:lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "pnpm --filter @email-gateway/database db:generate",
    "db:migrate": "pnpm --filter @email-gateway/database db:migrate",
    "db:migrate:dev": "pnpm --filter @email-gateway/database db:migrate:dev",
    "db:studio": "pnpm --filter @email-gateway/database db:studio",
    "db:seed": "pnpm --filter @email-gateway/database db:seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "ci:build": "pnpm ci:prisma && pnpm ci:build-packages",
    "ci:test": "pnpm --filter @email-gateway/shared test",
    "ci:lint": "pnpm --filter @email-gateway/shared lint || true && pnpm --filter @email-gateway/worker lint || true",
    "ci:prisma": "cd packages/database && pnpm exec prisma generate",
    "ci:build-packages": "pnpm --filter @email-gateway/shared build && pnpm --filter @email-gateway/database build && pnpm --filter @email-gateway/worker build",
    "ci:check-types": "pnpm --filter @email-gateway/shared exec tsc --noEmit && pnpm --filter @email-gateway/worker exec tsc --noEmit --skipLibCheck",
    "ci:audit": "pnpm audit --audit-level high",
    "cleanup:retention": "tsx scripts/cleanup-retention.ts",
    "cleanup:retention:dry": "tsx scripts/cleanup-retention.ts --dry-run",
    "cleanup:retention:stats": "tsx scripts/cleanup-retention.ts --stats",
    "test:security": "tsx scripts/test-encryption.ts",
    "audit:type-safety": "tsx scripts/audit-type-safety.ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.7",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@9.15.9",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "cuid": "^3.0.0"
  }
}
