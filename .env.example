# Application
NODE_ENV=development
API_PORT=3000
WORKER_PORT=3001

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/email_gateway?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# BullMQ Queue
QUEUE_NAME=email:send
QUEUE_CONCURRENCY=2
QUEUE_MAX_RETRIES=5

# AWS SES (TASK 4.1 - Agora em uso!)
AWS_REGION=us-east-1
SES_FROM_ADDRESS=noreply@example.com
SES_REPLY_TO_ADDRESS=support@example.com
SES_CONFIGURATION_SET_NAME=email-gateway
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# Worker Configuration (TASK 4.2)
WORKER_CONCURRENCY=16  # min(CPU*2, 16) por padr√£o

# Security
API_KEY_HEADER=x-api-key
CORS_ORIGIN=http://localhost:3000
ALLOWED_IPS=127.0.0.1,::1

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Limits
MAX_PAYLOAD_SIZE=1mb
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Retry & Backoff
RETRY_BASE_DELAY=1000
RETRY_MAX_DELAY=60000
RETRY_EXPONENTIAL_FACTOR=2
