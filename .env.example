# Application
NODE_ENV=development
API_PORT=3000
WORKER_PORT=3001

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/email_gateway?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# BullMQ Queue
QUEUE_NAME=email:send
QUEUE_CONCURRENCY=2
QUEUE_MAX_RETRIES=5

# AWS SES (placeholder - n√£o usado no MVP inicial)
AWS_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@example.com
AWS_SES_FROM_NAME="Email Gateway"
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Security
API_KEY_HEADER=x-api-key
CORS_ORIGIN=http://localhost:3000
ALLOWED_IPS=127.0.0.1,::1

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Limits
MAX_PAYLOAD_SIZE=1mb
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Retry & Backoff
RETRY_BASE_DELAY=1000
RETRY_MAX_DELAY=60000
RETRY_EXPONENTIAL_FACTOR=2
